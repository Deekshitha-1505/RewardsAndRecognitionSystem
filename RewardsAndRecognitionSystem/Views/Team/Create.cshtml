@model RewardsAndRecognitionRepository.Models.Team

@{
    ViewData["Title"] = "Create Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4 text-center">Create New Team</h2>

<div class="card shadow-sm border-0 p-4" style="max-width: 600px; margin: auto;">
    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label fw-semibold">Team Name</label>
            <input asp-for="Name" class="form-control border-dark-subtle" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="TeamLeadId" class="form-label fw-semibold">Team Lead</label>
            <select asp-for="TeamLeadId" class="form-select border-dark-subtle" asp-items="@ViewBag.TeamLeads">
                <option value="">-- Select Team Lead --</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ManagerId" class="form-label fw-semibold">Manager</label>
            <select asp-for="ManagerId" class="form-select border-dark-subtle" asp-items="@ViewBag.Managers">
                <option value="">-- Select Manager --</option>
            </select>
        </div>

        <div class="form-group mb-4">
            <label asp-for="DirectorId" class="form-label fw-semibold">Director</label>
            <select asp-for="DirectorId" class="form-select border-dark-subtle" asp-items="@ViewBag.Directors">
                <option value="">-- Select Director --</option>
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
            <button type="submit" class="btn btn-dark px-4">Create</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
